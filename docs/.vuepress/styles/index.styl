.home{
    padding: 0 !important
    width 100% !important
    max-width 100% !important;
}
.navbar{
    .site-name{
        color: transparent !important;
        animation: hue 1.5s linear infinite;
        background-image: linear-gradient(to right bottom, 
        #f00, #ff8000, #ff0, #0f0, #00ff80, #0ff, #0080ff, #00f, #8000ff, #e7ee12, #ff0080);
        background-clip: text;
    }
}
  @keyframes hue {
    from {
        filter: hue-rotate(0);
    }

    to {
        filter: hue-rotate(-360deg);
    }
}

.hero{
    width 100%
    height 100vh
    position: relative
    background: url(https://api.ixiaowai.cn/api/api.php) no-repeat;
    // https://api.ixiaowai.cn/api/api.php（二次元动漫）

    // https://api.ixiaowai.cn/mcapi/mcapi.php（mc酱动漫）

    // https://api.ixiaowai.cn/gqapi/gqapi.php（高清壁纸）
    background-size: cover
    overflow: hidden
    #main-title{
        padding-top 30vh ;
        font-weight: 500;
        display: inline-block;
        color: transparent !important;
        background-image:linear-gradient(to right,#64f4f2,#ff8989);
        background-clip: text;
    }

    img{ 
        width 100%
        height 100%
        max-height 100% !important
        position: absolute;
        left 0
        top: 0
    }

    .description{
        clear: both;
        width 100%
        color: transparent !important;
        animation: hue 2.5s linear infinite;
        background-image: linear-gradient(to right bottom, 
        #f00, #ff8000, #ff0, #0f0, #00ff80, #0ff, #0080ff, #00f, #8000ff, #e7ee12, #ff0080);
        background-clip: text;
    }


    .action a{
        position relative
    }

     .action a:before {
        content: "";
        position: absolute;
        top: -10px;
        left: -10px;
        right: -10px;
        bottom: -10px;
        border: 1px solid #03bf5f;
        transition: all 0.5s;
        -webkit-animation: move 3s linear infinite;
        animation: move 3s linear infinite;
     }
        
    
    @keyframes move {
        0%,
        to {
            -webkit-clip-path: inset(0 0 95% 0);
            clip-path: inset(0 0 95% 0);
        }
        25% {
            -webkit-clip-path: inset(0 95% 0 0);
            clip-path: inset(0 95% 0 0);
        }
        50% {
            -webkit-clip-path: inset(95% 0 0 0);
            clip-path: inset(95% 0 0 0);
        }
        75% {
            -webkit-clip-path: inset(0 0 0 95%);
            clip-path: inset(0 0 0 95%);
        }
    }

}



.theme-default-content:not(.custom){
    max-width 1100px
}
