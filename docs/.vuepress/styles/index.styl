        font-weight: 500;
        display: inline-block;
        color: transparent !important;
        background-image:linear-gradient(to right,#64f4f2,#ff8989);
        background-clip: text;
    }

    img{ 
        width 100%
        height 100%
        max-height 100% !important
        position: absolute;
        left 0
        top: 0
    }

    .description{
        clear: both;
        width 100%
        color: transparent !important;
        animation: hue 2.5s linear infinite;
        background-image: linear-gradient(to right bottom, 
        #f00, #ff8000, #ff0, #0f0, #00ff80, #0ff, #0080ff, #00f, #8000ff, #e7ee12, #ff0080);
        background-clip: text;
    }


    .action a{
        position relative
    }

     .action a:before {
        content: "";
        position: absolute;
        top: -10px;
        left: -10px;
        right: -10px;
        bottom: -10px;
        border: 1px solid #03bf5f;
        transition: all 0.5s;
        -webkit-animation: move 3s linear infinite;
        animation: move 3s linear infinite;
     }
        
    
    @keyframes move {
        0%,
        to {
            -webkit-clip-path: inset(0 0 95% 0);
            clip-path: inset(0 0 95% 0);
        }
        25% {
            -webkit-clip-path: inset(0 95% 0 0);
            clip-path: inset(0 95% 0 0);
        }
        50% {
            -webkit-clip-path: inset(95% 0 0 0);
            clip-path: inset(95% 0 0 0);
        }
        75% {
            -webkit-clip-path: inset(0 0 0 95%);
            clip-path: inset(0 0 0 95%);
        }
    }

}

